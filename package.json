{
  "name": "productivity-planner",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:development": "ng serve",
    "start:staging": "ng serve --configuration staging",
    "start:production": "ng serve --configuration production",
    "build:development": "ng build --configuration development",
    "build:staging": "ng build --configuration staging",
    "build:production": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch --onlyChanged --verbose",
    "test:coverage": "jest --coverage",
    "test:ci": "jest",
    "lint": "ng lint",
    "format": "npx prettier 'src/**/*.{ts,html,scss}' --write --ignore-path .gitignore",
    "deploy:development": "npm run build:development && firebase use development && firebase deploy",
    "deploy:staging": "npm run build:staging && firebase use staging && firebase deploy",
    "deploy:production": "npm run build:production && firebase use production && firebase deploy",
    "storybook": "ng run productivity-planner:storybook",
    "build-storybook": "ng run productivity-planner:build-storybook",
    "test-storybook": "test-storybook --url http://localhost:6006",
    "e2e:dev": "playwright test --ui",
    "e2e:ci": "playwright test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.3",
    "@angular/common": "^20.2.3",
    "@angular/compiler": "^20.2.3",
    "@angular/core": "^20.2.3",
    "@angular/forms": "^20.2.3",
    "@angular/platform-browser": "^20.2.3",
    "@angular/platform-browser-dynamic": "^20.2.3",
    "@angular/router": "^20.2.3",
    "@ngrx/signals": "^20.0.1",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "firebase": "^11.10.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/schematics": "^20.2.0",
    "@angular/build": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.3",
    "@chromatic-com/storybook": "^4.1.1",
    "@compodoc/compodoc": "^1.1.26",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/angular": "^9.1.3",
    "@storybook/test-runner": "^0.23.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.5",
    "angular-eslint": "^20.2.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "storybook": "^9.1.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "@angular/build": {
      "vite": {
        "esbuild": "^0.25.0"
      }
    },
    "vite": {
      "esbuild": "^0.25.0"
    }
  }
}